<%= form_for :user do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :role %><br>
      <%= f.text_area :role %>
    </p>
    <p>
      <%= f.label :email %><br>
      <%= f.text_area :email %>
    </p>
   
    <p>
      <%= f.submit %>
    </p>
  <% end %>
